<div class="text-center py-3 bg-green-200">

  <div class="cover-container">
    <main class="px-3">
      <h1>View Products</h1>
    </main>
    <div class="px-2 bg-light row my-5 mx-auto">
        <a href="/admin/add-product" class="btn bg-gray-400 col-2 ms-4 my-4">Add Product</a>
      <table class="table table-striped" id="categoryTable">
        <thead>
          <tr>
            <th scope="col">NO</th>
            <th scope="col">PRODUCT</th>
            <th scope="col">CATEGORY</th>
            <th scope="col">SUBCATEGORY</th>
            <th scope="col">BRAND</th>
            <th scope="col">LANDING COST</th>
            <th scope="col">MRP</th>
            <th scope="col">STOCK</th>
            <th scope="col">ACTION</th>
          </tr>
        </thead>
        <tbody>

          {{#each allProducts}}
            <tr>
              <td class="align-middle">{{@index}}</td>
              <td class="align-middle"> <img src="/images/product-images/{{this._id}}_{{productColour}}_1.jpg" width="50px" height="50px">{{this.productName}} </td>
              <td class="align-middle"> {{this.productCategory}} </td>
              <td class="align-middle"> {{this.productSubcategory}} </td>
              <td class="align-middle"> {{this.productBrand}} </td>
              <td class="align-middle"> {{this.landingCost}} </td>
              <td class="align-middle"> {{this.productPrice}} </td>
              <td class="align-middle"> {{this.productQuantity}} </td>
              <td class="align-middle">
                      <a href="/admin/delete-product?id={{this._id}}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                      <a href="/admin/edit-product?id={{this._id}}" class="text-primary ms-4"><i class="far fa-edit"></i></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
