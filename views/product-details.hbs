  $(function(){
    $('.imageZoom1').imageZoom();
  });

  $(function(){
    $('.imageZoom2').imageZoom();
  });

  $(function(){
    $('.imageZoom3').imageZoom();
  });

  $(function(){
    $('.imageZoom4').imageZoom();
  });
</script>

